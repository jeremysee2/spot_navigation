<launch>
  <node name="apriltag_detector_left" pkg="apriltag_ros" type="apriltag_detector_node" output="screen">
    <remap from="/camera_rect/image_rect" to="/spot/camera/left/image"/>
    <remap from="/camera_rect/camera_info" to "/spot/camera/left/camera_info"/>
    <remap from="tag_detections" to="/left/tag_detections"/>
    <remap from="tag_detections_image" to="/left/tag_detections"/>
    <param name="tag_family" value="tag36h11"/>
    <param name="tag_size" value="0.146"/>
    <param name="publish_detections_image" value="false"/>
  </node>

  <node name="apriltag_detector_right" pkg="apriltag_ros" type="apriltag_detector_node" output="screen">
    <remap from="/camera_rect/image_rect" to="/spot/camera/right/image"/>
    <remap from="/camera_rect/camera_info" to "/spot/camera/right/camera_info"/>
    <remap from="tag_detections" to="/right/tag_detections"/>
    <remap from="tag_detections_image" to="/right/tag_detections"/>
    <param name="tag_family" value="tag36h11"/>
    <param name="tag_size" value="0.146"/>
    <param name="publish_detections_image" value="false"/>
  </node>

</launch>
